<main role="main">
  <%= render 'shared/bigbanner'%>

  <div class="container">
    <h3 class="mt-5">Les évènements</h3> <br>

  <div class="row">
    <% pair = 0 %>
    <% @events.order('events.created_at DESC').all.each do |event| %>
      <div class="col-5">  
        <div class="card mb-3 p-0">
            <h4 class="card-header"><%= event.title %></h4>
              <%= image_tag "card.jpg", class: "first-slide", style:"height: 200px; width: 100%; display: block;" %> 
            <div class="card-body">
              <p class="card-text"><%= event.description %></p>
            </div>
            <div class="card-footer text-muted">
              <%= event.start_date %>
              <a href=<%= event_path(event.id) %> class="btn btn-secondary">Voir plus</a>
            </div>
          </div>
      </div>
      <% pair += 1 %>
      <% if pair.odd? %>
        <div class="col-2"></div>
      <% end %>  
    <% end %>
</div>
         
    </div>
  </div>
</main>


